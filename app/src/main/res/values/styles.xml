<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="question">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="description">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="question1IB">
        <item name="android:padding">7dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/q1_shape</item>
    </style>


    <style name="question2ET">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/q1_shape</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="question3ET">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/q3_shape</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyCustomToolbarTheam" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#dcdcdc</item>
    </style>

</resources>
